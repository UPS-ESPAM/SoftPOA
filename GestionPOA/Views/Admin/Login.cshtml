<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>:: Gestión Plan Operativo Anual ::</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    @Styles.Render("~/Content/plantillaCss")
    @Styles.Render("~/Content/plugins")
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons" />
    <link rel="stylesheet" href="https://unpkg.com/ng-table@2.0.2/bundles/ng-table.min.css">
</head>
<body ng-app="appGestion">
    <nav class="navbar navbar-primary navbar-transparent navbar-absolute">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Plan Operativo Anual</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class=" active ">
                        <a href="#">
                            <i class="material-icons">fingerprint</i> Login
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="wrapper wrapper-full-page" ng-controller="LoginController as vm">
        <div class="full-page login-page" filter-color="black" data-image="/gestionPoa/Content/img/login.jpg">
            <!--   you can change the color of the filter page using: data-color="blue | purple | green | orange | red | rose " -->
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                            <form name="loginForm" ng-submit="vm.verifylogin()" novalidate">
                                <div class="card card-login card-hidden">
                                    <div class="card-header text-center" data-background-color="green">
                                        <h4 class="card-title">Login</h4>
                                    </div>
                                    <div class="card-content" >
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">account_circle</i>
                                            </span>
                                            <div class="form-group">
                                                <label class="control-label">Usuario</label>
                                                <input type="text" class="form-control" ng-model="vm.login.usuario" ng-init="vm.login.usuario=1308648565" required>
                                            </div>
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                            <div class="form-group">
                                                <label class="control-label">Contraseña</label>
                                                <input type="password" class="form-control" ng-model="vm.login.password" ng-init="vm.login.password=791081" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="footer text-center">
                                        <button type="submit" class="btn btn-success" ng-disabled="loginForm.$invalid">
                                            Ingresar
                                            <span class="btn-label btn-label-right">
                                                <i class="material-icons">keyboard_arrow_right</i>
                                            </span>
                                            <div class="ripple-container"></div>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container">
                    <p class="copyright pull-right">
                        &copy;
                        <script>
                        document.write(new Date().getFullYear())
                        </script>
                        <a href="http://ups.espam.edu.ec/">UPS</a> - Unidad de Producción de Software
                    </p>
                </div>
            </footer>

        </div>
               <!-- MODAL -->
        <div id="myModalss" class="modal fade" data-backdrop="static" data-keyboard="false" ng-controller="LoginController as vm">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title text-success">:: Generar Planificación ::</h4>
                    </div>
                    <form name="planificacionForm" class="ui form"  ng-submit="vm.registerPlanificacion()" novalidate>
                        <div class="modal-body">
                            <div class="form-group label-floating">
                                <label class="control-label">PLANIFICACIÓN</label>
                                <div class="form-group">
                                    <select class="form-group" ng-model="vm.TipoPlanificacion" ng-options="arrOptionSelectTP.id as arrOptionSelectTP.Descripcion for arrOptionSelectTP in vm.arrOptionTP" required>
                                        <option value=""  >-- Seleccione --</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group label-floating">
                                <label class="control-label">PERIOCIDAD</label>
                                <div class="form-group">
                                    <select class="form-group" ng-model="vm.Planificacionperiodo" ng-options="arrOptionSelect.id as arrOptionSelect.Periodo for arrOptionSelect in vm.arrOption" required>
                                        <option value="">-- Seleccione --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-fill btn-success" ng-disabled="planificacionForm.$invalid">Planificar <i class="next_week"></i></button>                         
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- END MODAL -->
        <!-- MODAL POAPEDI -->
        <div id="myModalPOAPEDI" class="modal fade" data-backdrop="static" data-keyboard="false" ng-controller="LoginController as vm">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title text-success">:: INGRESAR AL SISTEMA ::</h4>
                    </div>
                    <form name="planificacionForm" class="ui form" ng-submit="vm.SingInToPOAorPedi()" novalidate>
                        <div class="modal-body">
                            <div class="form-group label-floating">
                                <label class="control-label">INGRESAR A LA ADMINISTRACIÓN COMO: </label>
                                <div class="form-group">
                                    <select class="form-group" required ng-model="vm.POAorPEDi">
                                        <option value="POA">POA</option>
                                        <option value="PEDI">PEDI</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-fill btn-success" ng-disabled="planificacionForm.$invalid">Ingresar <i class="forward"></i></button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- END MODAL POAPEDI -->

    </div>


    @Scripts.Render("~/bundles/plantillaJS")
    @Scripts.Render("~/bundles/angular")


    @Scripts.Render("~/App/app.js",
                       "~/App/Services/SubsistemasServices.js",
                       "~/App/Services/ObjetivosEspecificosServices.js",
                       "~/App/Services/ObjetivosEstrategicosServices.js",
                       "~/App/Services/IndicadoresServices.js",
                       "~/App/Services/AccionesServices.js",
                       "~/App/Services/EstrategiasServices.js",
                       "~/App/Services/LoginServices.js",
                       "~/App/Services/MetasServices.js",
                       "~/App/Services/EvidenciasServices.js",
                       "~/App/Services/IntervalosServices.js",
                       "~/App/Services/ProgramacionesServices.js",
                       "~/App/Services/DepartamentosServices.js",
                       "~/App/Services/MetasDepartamentosServices.js",
                       "~/App/Services/ObjetivosEspecificosDepartamentosServices.js",
                       "~/App/Services/PeriodicidadServices.js",
                       "~/App/Services/InformacionAdicionalServices.js",
                       "~/App/Services/AlertasServices.js",
                       "~/App/Services/PeriodosServices.js",
                       "~/App/Controller/SubsistemasController.js",
                       "~/App/Controller/ObjetivosEspecificosController.js",
                       "~/App/Controller/ObjetivosEstrategicosController.js",
                       "~/App/Controller/IndicadoresController.js",
                       "~/App/Controller/AccionesController.js",
                       "~/App/Controller/LoginController.js",
                       "~/App/Controller/MetasController.js",
                       "~/App/Controller/MetasDepartamentosController.js",
                       "~/App/Controller/ObjetivosEspecificosDepartamentosController.js",
                       "~/App/Controller/PeriodicidadController.js",
                       "~/App/Controller/InformacionAdicionalController.js",
                       "~/App/Controller/CumplimientoOEstrategicoController.js",
                       "~/App/Controller/AlertasController.js",
                       "~/App/Controller/PeriodosController.js",
                       "~/App/Controller/HomeController.js",
                       "~/App/Directivas/numbersOnly.js",
                       "~/App/Controller/EstrategiasController.js",
                       "~/App/Directivas/decimalOnly.js",
                       "~/App/Directivas/formatCurrency.js", 
                       "~/App/Directivas/uploaderFile.js",
                       "~/App/Directivas/loader.js"
                        )

    <!-- OBTENER RUTA PARA ANGULAR-->
    <script>
        var isdebug = false;

        function getBaseUrl() {
            var url = "";
            isdebug = true;
            if (isdebug) {
                url = location.href.split("/");
                return url[0] + "/" + url[1] + "/" + url[2];
            }
            else {
                return url;
            }
        }

    </script>


    <script type="text/javascript">
        $().ready(function () {

            $('.datepicker').datetimepicker({
                format: 'YYYY/MM/DD',
                icons: {
                    time: "fa fa-clock-o",
                    date: "fa fa-calendar",
                    up: "fa fa-chevron-up",
                    down: "fa fa-chevron-down",
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'fa fa-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-remove',
                    inline: true
                }
            }); 

            demo.checkFullPageBackgroundImage();

            setTimeout(function () {
                // after 1000 ms we add the class animated to the login/register card
                $('.card').removeClass('card-hidden');
            }, 700)
        });
    </script>
  

</body>
</html>